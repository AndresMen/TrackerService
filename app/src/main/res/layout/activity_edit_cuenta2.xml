<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageView
        android:tint="@color/black"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:src="@drawable/lock"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"/>
    <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="opciones de inicio "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:paddingBottom="20dp"
        android:gravity="left"
        android:paddingLeft="30dp"/>



    <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular

        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="para modificar tu cuenta "
        android:textColor="@color/sub_txt"
        android:textSize="15sp"
        android:paddingBottom="35dp"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>


    <RelativeLayout
        android:id="@+id/rlem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toStartOf="@+id/ivema"
            android:textColorHint="@color/colorTexto">

            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:focusable="false"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/colorTexto"
                android:textColorHint="@color/colorTexto"
                android:textSize="@dimen/font_size_16sp" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/ivema"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/editar"
            android:background="?attr/selectableItemBackground"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/rlpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toStartOf="@+id/ivpas"
            android:textColorHint="@color/colorTexto">

            <EditText
                android:id="@+id/editpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:text="@string/hint_password"
                android:textColor="@color/colorTexto"
                android:textColorHint="@color/colorTexto"
                android:textSize="@dimen/font_size_16sp" />

        </android.support.design.widget.TextInputLayout>

        <ImageView

            android:id="@+id/ivpas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/editar"
            android:background="?attr/selectableItemBackground"/>
    </RelativeLayout>


</LinearLayout>