<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/sv_personal_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="horizontal">



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTexto">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_reg_driving_license"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:hint="@string/hint_driving_license"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/colorTexto"
                        android:textSize="@dimen/font_size_20sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/colorTexto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="horizontal">



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTexto">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_reg_license_exp_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:hint="@string/hint_license_exp_date"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/colorTexto"
                        android:textSize="@dimen/font_size_20sp"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/colorTexto"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="horizontal">



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTexto">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_reg_license_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:hint="@string/hint_license_plate"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/colorTexto"
                        android:textSize="@dimen/font_size_20sp"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                        android:maxLength="10"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/colorTexto"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTexto">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_reg_insuarance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:hint="@string/hint_insuarance"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/colorTexto"
                        android:textSize="@dimen/font_size_20sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@color/colorTexto"  />
            <TextView
                android:padding="@dimen/height_10"
                android:id="@+id/tv_signin_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_50"
                android:layout_marginBottom="58dp"
                android:background="@drawable/signup_ract"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Guardar datos "
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>


    </ScrollView>




</RelativeLayout>