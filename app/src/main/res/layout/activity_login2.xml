<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:tint="@color/black"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:src="@drawable/lock"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp"/>

        <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular

            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nos agrada tenerte de vuelta"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp"/>



        <LinearLayout
            android:layout_marginTop="50dp"
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            android:layout_below="@+id/divider_name"
            >


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTexto">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:lines="1"
                    android:text=""
                    android:imeOptions="actionNext"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorTexto"
                    android:textSize="@dimen/font_size_20sp"
                    android:textColorHint="@color/colorTexto"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1"
            android:background="@color/colorLinea"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_password"
                android:layout_marginRight="@dimen/margin_3"
                android:textColorHint="@color/colorTexto"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorTexto">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:lines="1"
                    android:text=""
                    android:imeOptions="actionDone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorTexto"
                    android:textSize="@dimen/font_size_20sp"
                    android:textColorHint="@color/colorTexto" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1"
            android:background="@color/colorLinea"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50" />






        <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/tv_signin"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_ract"
            android:paddingBottom="12dp"
            android:paddingLeft="63dp"
            android:paddingRight="63dp"
            android:paddingTop="10dp"
            android:text="Iniciar sesiÃ³n "
            android:textColor="#ffff"
            android:textSize="20sp" />

        <com.example.mendez.trackerservice.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caption_oops_forgot_password"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_size_15sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/width_30"
            android:layout_marginRight="@dimen/width_30"
            android:paddingBottom="@dimen/margin_13"
            android:layout_marginTop="@dimen/margin_10"
            />
    </LinearLayout>
</ScrollView>